<body>
    <div class="container-fluid portfolio-header">
        <div class="container">
            <div class="row  position-relative">
                <div class="col-md-3 col-sm-12">
                    <div class="position-absolute">
                        <div class="profile-image rounded rounded-circle">
                            <img src="~/Assets/Images/profile.jpg" alt="...">
                        </div>
                        <div class="card d-none d-sm-none d-md-block main-menu text-center">
                            
                                <li>
                                    <button type="button" class="btn btn-primary btn-sm w-75">About</button>
                                </li>
                                <li>
                                    <button type="button" class="btn btn-primary btn-sm w-75">Portfolio</button>
                                </li>
                                <li>
                                    <button type="button" class="btn btn-primary btn-sm w-75">Experience</button>
                                </li>
                                <li>
                                    <button type="button" class="btn btn-primary btn-sm w-75">Contact</button>
                                </li>
                                <li>
