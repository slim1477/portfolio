                                </li>
                                <li>
                                    <button type="button" class="btn btn-primary btn-sm w-75">Large button</button>
                                </li>
         
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <!-- Start Profile Section -->
            <section class="col-md-9 col-sm-12 col-xs-12 offset-md-5 first profile position-relative">
                <div class="title">
                    <h1>Seyi Agboola</h1>
                    <p>I draw lines & shapes with colors and make them awesome!</p>
                </div>
        </div>
        </div>
      
  
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top-primary footer text-muted">
        <div class="container-flex text-center">
            &copy; @DateTime.Now.Year - Seyi Agboola - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

